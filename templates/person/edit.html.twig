{% extends 'base.html.twig' %}
{% block title %}Edit {{ person.fullname }}{% endblock %}
{% block body %}
    <h1>Person edit</h1>

    {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        {% for aform in attribute_forms %}
        {{ form_widget(aform) }}
        {% endfor %}
        {% if context_forms|length > 0 %}
            <strong>External info</strong>
            <ul>
            {% include '@BisonLabContext/context_forms.html.twig' with { 'context_forms': context_forms } %}
            </ul>
        {% endif %}
        <input class="btn-sm btn-dark" type="submit" value="Save" />
    {{ form_end(edit_form) }}
    <a href="{{ path('person_show', { 'id': person.id }) }}" class="btn-sm btn-dark">Cancel</a><br>
{% endblock %}
