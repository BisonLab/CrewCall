  <div id="sakonninmessage_{{ message.messageid }}">
    {% set ndelform = sakonnin_messages.getCreateDeleteForm(message, true) %}
    <form id="deletemessageform_{{ message.messageid }}" onSubmit="return deleteSakonninMessage('{{ message.messageid }}');">
    <strong id="sakonninmessagesubject_{{ message.messageid }}">{{ message.subject }}</strong>
    ({{ message.state | capitalize }} <a href="#" title="{{ message.messagetype.description }}">{{ message.messagetype }}</a> by {{ message.createdBy }} at {{ message.createdAt | date('Y-m-d') }}) {% if message.expireat %}Expires {{ message.expireat | date('Y-m-d') }}{% endif %})
    {{ form_start(ndelform) }}
    {{ form_rest(ndelform) }}
    <button type="submit" class="btn btn-link">
    <span class="remove_glyph"></span>
    </button>
    </form>
    <pre class="noteText" id="sakonninmessagebody_{{ message.id }}">{{ message.body }}</pre>
  </div>
