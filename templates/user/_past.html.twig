<h4 class="text-uppercase font-weight-bold mt-4">Sign up for jobs</h4>
<div class="row">
    <div class="col-sm-4 col-xs-6 p-3">
      <a class="btn badge" href="#" onClick="return getCContent('{{ path('uf_me_jobs', {'view': 'opportunities'}) }}', 'myJobsLink');">Sign up (<span id="opportunities_count">{{ opportunities | length }}</span>)</a>
      <a class="btn badge" href="#" onClick="return getCContent('{{ path('uf_me_jobs', {'view': 'interested'}) }}', 'myJobsLink');">Signed Up (<span id="interested_count">{{ interested | length }}</span>)</a>
      <a class="btn badge badge-secondary" href="#" onClick="return getCContent('{{ path('uf_me_jobs', {'view': 'jobs_list'}) }}', 'myJobsLink');">As list</a>
    </div>
    {% include '/user/_choose_month.html.twig' %}
</div><!-- end row -->
{% if past|length > 0 %}
    <h2>Jobs you have done</h2>
        <table class="table table-striped  table-sm">
        <thead class="thead-inverse">
            <tr>
                <th>What</th>
                <th>Where</th>
                <th>Start</th>
                <th>End</th>
                <th>What</th>
                <th>Clocked</th>
            </tr>
        </thead>
        <tbody>
        {% for job in past %}
            {% set shift = job.shift %}
            <tr>
                <td>{{ shift.event }}</td>
                <td>{{ shift.event.location }}</td>
                <td data-order="{{ shift.start | date('U')}}" >{% if shift.start %}{{ shift.start|date('d M H:i') }}{% endif %}</td>
                <td data-order="{{ shift.end | date('U')}}" >{% if shift.end %}{{ shift.end|date('d M H:i') }}{% endif %}</td>
                <td>{{ shift.function }}</td>
                <td>
                    <table class="table  table-sm">
                    <th>What</th><th>In</th><th>Out</th>
                    {% for elem in job.joblogs %}
                    <tr>
                    <td>{{ elem.shift }}</td>
                    <td>{{ elem.in | date("Y-m-d H:i") }}</td>
                    <td>{{ elem.out | date("Y-m-d H:i") }}</td>
                    </tr>
                    {% endfor %}
                    </table>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
  {% else %}
     <p>You've done naught.</p>
  {% endif %}
{% endif %}
