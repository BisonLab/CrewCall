{% import "BisonLabCommonBundle::macros.html.twig" as blcommon %}
<!DOCTYPE html>
<html>
    <head>
       <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
       <title>{% block title %}CrewCall{% endblock %}</title>
       <meta name="viewport" content="width=device-width, initial-scale=1.0" />
       <link rel="shortcut icon" href="{{ asset('images/favicon.ico') }}" />
       <link rel="icon" type="image/x-icon" href="{{ asset('images/favicon.ico') }}" />
{% block stylesheets %}
<!--
       <link rel="stylesheet" href="{{ asset('css/custom-theme/jquery-ui-1.10.3.theme.css') }}" type="text/css" media="all" />
       <link rel="stylesheet" href="{{ asset('css/custom-theme/jquery-ui-1.10.3.custom.css') }}" type="text/css" media="all" />
-->
       <link rel="stylesheet" href="{{ asset('public/jquery-ui/themes/smoothness/jquery-ui.min.css') }}" type="text/css" media="all" />
        <!-- Datatables stuff -->
       <link rel="stylesheet" href="{{ asset('bundles/bisonlabcommon/datatables/dataTables.bootstrap.min.css') }}" type="text/css" media="all" />
       <link rel="stylesheet" href="{{ asset('bundles/bisonlabcommon/datatables/fixedHeader.bootstrap.min.css') }}" type="text/css" media="all" />
        <!-- End datatables stuff -->
       <link rel="stylesheet" href="{{ asset('css/jquery.datetimepicker.css') }}" type="text/css" media="all" />
       <link rel="stylesheet" href="{{ asset('public/css/bootstrap.css') }}" type="text/css" media="all" />
<!--  Or you can pick some other themes from https://bootswatch.com/ - Like this one
       <link rel="stylesheet" href="{{ asset('css/bootstrap-simplex.min.css') }}" type="text/css" media="all" />
-->
       <link rel="stylesheet" href="{{ asset('css/custom.css') }}" type="text/css" media="all" />
{% endblock %}
       <script src="{{ asset('public/jquery/jquery.js') }}"></script>
       <script src="{{ asset('public/js/bootstrap.js') }}"></script>
       <script src="{{ asset('public/jquery-ui/jquery-ui.js') }}"></script>
       <script src="{{ asset('bundles/bisonlabcommon/datatables/jquery.dataTables.min.js') }}"></script>
       <script src="{{ asset('bundles/bisonlabcommon/datatables/dataTables.bootstrap.min.js') }}"></script>
       <script src="{{ asset('bundles/bisonlabcommon/datatables/dataTables.fixedHeader.min.js') }}"></script>
       <script src="{{ asset('bundles/bisonlabcommon/datatables/dataTables.responsive.min.js') }}"></script>
</head>

<body>
{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
{% include '::scripts.html.twig' %}
{% include 'BisonLabSakonninBundle::scripts.html.twig' %}
{% include 'BisonLabSakonninBundle:Message:_message_log_popup.html.twig' %}
{% endif %}
<header class="navbar navbar-default navbar-fixed-top">
  {% block navbar %}
     <div class="container-fluid">
     <div class="navbar-header">
     <a class="navbar-brand" href="{{ path('homepage')}}">CrewCall</a>
     </div>
     {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
       {{ knp_menu_render('CrewCallBundle:Builder:userMenu', { 'style': 'navbar-right' }) }}
        {% if is_granted("ROLE_ADMIN") %}
        <form action="{{ path('global_search') }}" class="navbar-form navbar-right" role="search" method="get">
            <div class="input-group">
                <input id="head-search-box" accesskey="f" name="value" type="text" required="required" class="form-control" placeholder="Search">
                <div class="input-group-btn">
                    <button class="btn btn-default" type="submit">
                    <i class="glyphicon glyphicon-search"></i>
                    </button>
                </div>
            </div>
        </form>
         {% endif %}
     {% endif %}
    </div>
  {% endblock %}
  {% block topmenu %}
    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
    <div class="container topmenublock">
    <div class="row">
    <div class="col-md-9">
       {{ knp_menu_render('CrewCallBundle:Builder:mainMenu', { 'style': 'tabs' }) }}
    <div class="col-md-3">
    </div>
    </div>
    </div>
    {% endif %}
  {% endblock %}
 </div>
</header>
<br>
  {% block flashmessage %}
<div class="container flashmessageblock">
{% include 'BraincraftedBootstrapBundle::flash.html.twig' with { 'close': true } %}
</div>
  {% endblock %}
  {% block lmenu %}{% endblock %}
<div class="container contentblock">
  {% block content %}
<br>
  {% endblock %}
</div>
<div class="container bodyblock">
  {% block body %}{% endblock %}
</div>
  {% block rmenu %}{% endblock %}
  {% block footer %}{% endblock %}
  {% block javascripts %}{% endblock %}
 </body>
</html>
