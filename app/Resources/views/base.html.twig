{% import "BisonLabCommonBundle::macros.html.twig" as blcommon %}
<!DOCTYPE html>
<html>
    <head>
       <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
       <title>{% block title %}CrewCall{% endblock %}</title>
       <meta name="viewport" content="width=device-width, initial-scale=1.0" />
       <link rel="shortcut icon" href="{{ asset('images/favicon.ico') }}" />
       <link rel="icon" type="image/x-icon" href="{{ asset('images/favicon.ico') }}" />
{% block stylesheets %}
       <link rel="stylesheet" href="{{ asset('public/jquery-ui/themes/smoothness/jquery-ui.min.css') }}" type="text/css" media="all" />
<!--  Or you can pick some other themes from https://bootswatch.com/ - Like this one
       <link rel="stylesheet" href="{{ asset('css/bootstrap-simplex.min.css') }}" type="text/css" media="all" />
-->
       <link rel="stylesheet" href="{{ asset('public/css/bootstrap.css') }}" type="text/css" media="all" />
       <link rel="stylesheet" href="{{ asset('public/fullcalendar/dist/fullcalendar.min.css') }}" type="text/css" media="all" />
       <link rel="stylesheet" href="{{ asset('bundles/bisonlabcommon/datatables/datatables.css') }}" type="text/css" media="all" />

        <!-- The last one, our customizations -->
       <link rel="stylesheet" href="{{ asset('css/custom.css') }}" type="text/css" media="all" />
{% endblock %}
       <script src="{{ asset('public/jquery/jquery.js') }}"></script>
       <script src="{{ asset('public/js/bootstrap.js') }}"></script>
       <script src="{{ asset('public/jquery-ui/jquery-ui.js') }}"></script>
       <script src="{{ asset('bundles/bisonlabcommon/datatables/datatables.min.js') }}"></script>
       <script src="{{ asset('bundles/bisonlabcommon/js/multiselect.min.js') }}"></script>
</head>

<body>
{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
{% include '::scripts.html.twig' %}
{% include 'BisonLabSakonninBundle::scripts.html.twig' %}
{% include 'BisonLabSakonninBundle:Message:_message_log_popup.html.twig' %}
{% if enable_personal_messaging %}
{% include 'BisonLabSakonninBundle:Message:_pm_handling.html.twig' %}
{% endif %}
{% endif %}
<header class="navbar navbar-default navbar-fixed-top">
  {% block navbar %}
 <div class="container-fluid">

   <div class="navbar-header">
     <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#crewcall-navbar-collapse" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
     </button>
     <a class="navbar-brand" href="{{ path('homepage')}}"><img src="{{ asset('images/logo.gif') }}" border="0" height="40"></a>
   </div>
   <div class="collapse navbar-collapse" id="crewcall-navbar-collapse">
     {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
       {{ knp_menu_render('CrewCallBundle:Builder:mainMenu', { 'style': 'navbar' }) }}

        {% if is_granted("ROLE_ADMIN") %}
        <form action="{{ path('global_search') }}" class="navbar-form navbar-right" role="search" method="get">
            <div class="input-group">
                <input id="head-search-box" accesskey="f" name="value" type="text" required="required" class="form-control" placeholder="Search">
                <div class="input-group-btn">
                    <button class="btn btn-default" type="submit">
                    <i class="glyphicon glyphicon-search"></i>
                    </button>
                </div>
            </div>
        </form>
         {% endif %}
       {{ knp_menu_render('CrewCallBundle:Builder:userMenu', { 'style': 'navbar-right' }) }}
     {% endif %}
   </div>
  {% endblock %}
 </div>
</header>

  {% block flashmessage %}
<div class="container flashmessageblock">
 {% include 'BraincraftedBootstrapBundle::flash.html.twig' with { 'close': true } %}
</div>
  {% endblock %}
  {% block lmenu %}{% endblock %}
<div class="container contentblock">
  {% block content %}{% endblock %}
  {% block body %}{% endblock %}
</div>
  {% block rmenu %}{% endblock %}
  {% block footer %}{% endblock %}
  {% block javascripts %}{% endblock %}
 </body>
</html>
