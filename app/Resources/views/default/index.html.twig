{% extends 'base.html.twig' %}

{% block body %}
<div id="container">
<div class="col-sm-6">
{% set got_nothing = true %}
{% for message in sakonnin_messages.messagetype('Front page logged in').messages if message.state == "SHOW" %}
{% if is_granted('show', message) %}
<div id="status">
<h3>{{ message.subject }}</h3>
<pre wrap>
{{ message.body }}
</pre>
</div>
{% set got_nothing = false %}
{% endif %}
{% endfor %}
{% if got_nothing == true %}
    <div id="welcome">
        <h1>Welcome to CrewCall</h1>
    </div>
{% endif %}
</div>
<div class="col-sm-6">
{% set mlogcontext = {
            'system': 'crewcall',
            'object_name': 'person',
            'message_type': 'PersonNote',
            'external_id': app.user.id
    }
%}
{% for note in sakonnin_messages.MessagesForContext(mlogcontext) %}
{% if is_granted('show', note) %}
    <div id="status">
<h3>{{ note.subject }}</h3>
<pre wrap>
{{ note.body }}
</pre>
{% endif %}
{% endfor %}
</div>
</div>
{% endblock %}
